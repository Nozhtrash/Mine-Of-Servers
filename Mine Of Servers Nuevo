    // =========================
    // SPA: Mostrar/Ocultar Secciones
    // =========================
    function showSection(section) {
      document.querySelectorAll('main > section, main > aside').forEach(el => el.classList.add('hidden'));
      if (!section || section === 'inicio') {
        document.getElementById('servers')?.classList.remove('hidden');
        document.getElementById('news')?.classList.remove('hidden');
        document.getElementById('mods')?.classList.remove('hidden');
        document.getElementById('essential')?.classList.remove('hidden');
        document.getElementById('forum')?.classList.remove('hidden');
      } else if (section === 'forum') {
        document.getElementById('forum-section')?.classList.remove('hidden');
      } else if (section === 'mods') {
        document.getElementById('mods-section')?.classList.remove('hidden');
      }
      // Agrega más secciones si tienes más
    }
    window.addEventListener('hashchange', () => {
      const hash = location.hash.replace('#/', '');
      showSection(hash || 'inicio');
    });
    showSection(location.hash.replace('#/', '') || 'inicio');

    // =========================
    // Modal de autenticación
    // =========================
    const openAuthModalBtn = document.getElementById('open-auth-modal');
    const authModal = document.getElementById('auth-modal');
    if (openAuthModalBtn && authModal) {
      openAuthModalBtn.onclick = () => authModal.classList.remove('hidden');
    }
    document.getElementById('close-auth')?.addEventListener('click', () => {
      authModal.classList.add('hidden');
    });

    // =========================
    // Modal de edición de perfil
    // =========================
    document.getElementById('edit-profile-btn')?.addEventListener('click', function() {
      document.getElementById('profile-modal').classList.remove('hidden');
    });
    document.getElementById('close-profile')?.addEventListener('click', function() {
      document.getElementById('profile-modal').classList.add('hidden');
    });

    // =========================
    // Simulación de actualización de estadísticas (puedes quitar si no lo usas)
    // =========================
    function updateServerStats() {
      const playerCounts = document.querySelectorAll('.bg-green-100.text-green-800');
      playerCounts.forEach(count => {
        const parts = count.textContent.split('/');
        const current = parseInt(parts[0].replace(/,/g, ''));
        const max = parseInt(parts[1].replace(/,/g, ''));
        const change = Math.floor(Math.random() * 20) - 10;
        const newCount = Math.max(0, Math.min(current + change, max));
        count.textContent = newCount.toLocaleString() + '/' + max.toLocaleString();
      });
    }
    setInterval(updateServerStats, 5000);

    // =========================
    // Language toggle (demo)
    // =========================
    // (Eliminado: variable ya declarada arriba)
    if (languageToggle) {
      languageToggle.addEventListener('click', function() {
        if (currentLanguage === 'es') {
          currentLanguage = 'en';
          languageToggle.innerHTML = '<i class="fas fa-globe mr-1"></i> EN';
          alert('Traducción a inglés (demo)');
