// PAGINACIÓN SENCILLA PARA MODS Y SEEDS

// =========================

let currentPageMods = 1;

const modsPerPage = 5;



function showModsPage(mods) {

  const modsList = document.getElementById('mods-list');

  modsList.innerHTML = '';

  const start = (currentPageMods - 1) * modsPerPage;

  const end = start + modsPerPage;

  mods.slice(start, end).forEach(mod => {

    const modCard = document.createElement('div');

    modCard.className = 'bg-gray-700 p-4 rounded shadow';

    modCard.innerHTML = `<h3 class="font-bold">${mod.name}</h3><p>${mod.description}</p>`;

    modsList.appendChild(modCard);

  });

}



// Igual para seeds...

</script>

