    function goToProfile(username) {
    if (username === 'Usuario123') {
        window.location.href = 'https://mineofservers.com/mi-perfil';
    } else {
        window.location.href = `https://mineofservers.com/perfil/${encodeURIComponent(username)}`;
    }
}
