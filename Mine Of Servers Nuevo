    <button id="back-to-top" style="opacity:0.5;position:fixed;top:24px;left:50%;transform:translateX(-50%);z-index:1000;display:none;" class="bg-gray-800 text-white px-4 py-2 rounded shadow-lg hover:opacity-100 transition">
      Volver al inicio
    </button>

    <script>
